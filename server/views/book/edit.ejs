<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="container mt-3">
    <div class="mt-4 p-5 my-5 border">
      <div class="row">
        <div class="offset-md-3 col-md-6">
          <h1><%=title %></h1>

          <form class="form" method="post">
            <div class="from-group">
              <label for="nameTextField">Contact Name</label>
              <input
                type="text"
                class="form-control"
                id="nameTextField"
                placeholder="Enter the Contact Name:"
                name="contact_name"
                value="<%= book.contact_name %>"
                required
              />
            </div>

            <div class="from-group">
              <label for="authorTextField">Contact Number</label>
              <input
                type="text"
                class="form-control"
                id="authorTextField"
                placeholder="Enter the Contact Number:"
                name="contact_number"
                value="<%= book.contact_number %>"
                required
              />
            </div>

            <div class="from-group">
              <label for="publishedTextField">Email Address</label>
              <input
                type="text"
                class="form-control"
                id="publishedTextField"
                placeholder="Enter the Email Address:"
                name="email"
                value="<%= book.email %>"
                required
              />
            </div> <br>

            <button class="btn btn-primary" type="submit">
              <i class="fas fa-edit"></i>Submit
            </button>

            <a href="/book-list/delete/<%= book._id %>" class="btn btn-danger btn-primary">
              <i class="fas fa-trash-alt"></i> Delete</a>

            <a href="/book-list" class="btn btn-warning">
              <i class="fas fa-undo"></i>Cancel
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
